# Enhanced Survey Automation System Configuration

# Database Configuration
DATABASE_URL=sqlite:///survey_automation.db
# For PostgreSQL: postgresql://user:password@localhost:5432/survey_automation

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo
LOCAL_AI_MODEL=microsoft/DialoGPT-medium

# CAPTCHA Solving Services
CAPTCHA_API_KEY=your_2captcha_api_key_here
CAPTCHA_SERVICE=2captcha
ANTICAPTCHA_API_KEY=your_anticaptcha_api_key_here
CAPMONSTER_API_KEY=your_capmonster_api_key_here

# System Configuration
MAX_CONCURRENT_TASKS=5
DEFAULT_RETRY_COUNT=3
DRIFT_CHECK_INTERVAL=3600
CAPTCHA_TIMEOUT=300
TASK_TIMEOUT=1800

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TYPE=chromium
ANTI_DETECTION_ENABLED=true
STEALTH_MODE=true

# Proxy Configuration
PROXY_ROTATION_ENABLED=false
PROXY_LIST_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production
ENCRYPT_CREDENTIALS=true
JWT_SECRET_KEY=your_jwt_secret_key_here

# Monitoring and Logging
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ELASTICSEARCH_ENABLED=false
LOGGING_LEVEL=INFO
LOG_FILE_PATH=./logs/survey_automation.log

# Web Interface
FLASK_ENV=production
FLASK_DEBUG=false
WEB_PORT=5000
WEB_HOST=0.0.0.0

# Redis Configuration (for task queue)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Email Notifications (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Webhook Notifications (optional)
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Platform-Specific Settings
SWAGBUCKS_BASE_URL=https://www.swagbucks.com
INBOXDOLLARS_BASE_URL=https://www.inboxdollars.com

# Performance Tuning
BROWSER_POOL_SIZE=10
REQUEST_DELAY_MIN=1
REQUEST_DELAY_MAX=5
HUMAN_DELAY_MIN=2
HUMAN_DELAY_MAX=8

# Development Settings
DEBUG_MODE=false
SAVE_SCREENSHOTS=false
SCREENSHOT_PATH=./screenshots
SAVE_PAGE_SOURCE=false

# Feature Flags
ENABLE_DRIFT_DETECTION=true
ENABLE_CAPTCHA_SOLVING=true
ENABLE_AI_RESPONSES=true
ENABLE_PROXY_ROTATION=false
ENABLE_HUMAN_SOLVER=false

# Rate Limiting
REQUESTS_PER_MINUTE=30
SURVEYS_PER_HOUR=10
DAILY_TASK_LIMIT=50

# Quality Control
MIN_RESPONSE_CONFIDENCE=0.7
MAX_RESPONSE_LENGTH=500
MIN_RESPONSE_LENGTH=10
ENABLE_RESPONSE_VALIDATION=true

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups